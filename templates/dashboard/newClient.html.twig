{% extends "base.html.twig" %}

{% block javascripts_bottom %}
  {{ parent() }}

  <script>
    const saveEndpoint = "{{ url('app_new_client_endpoint') }}";
  </script>

  <script src=" {{ asset('js/createClient.js') }} "></script>
{% endblock %}

{% block main %}

<div class="client-form">
  <h1>Nieuw persoon aanmaken</h1>
    <div class="form-left">
        <div class="form-top">
            <input type="text" id="fname" value="" placeholder="Voornaam" />
            <input type="text" id="lname" value="" placeholder="Achternaam" />
            <div class="bdate-container">
                <h6>Geboortedatum</h6>
                <input type="date" id="bdate" value="" />
            </div>
        </div>
        <h6>Taal</h6>
        <div class="radio-container" id="languages">
                <input type="radio" name="lang" id="nl" />
                <label for="nl">NL</label>
                <input type="radio" name="lang" id="eng" />
                <label for="eng">ENG</label>
                <input type="radio" name="lang" id="esp" />
                <label for="esp">ESP</label>
                <input type="radio" name="lang" id="fra" />
                <label for="fra">FRA</label>
                <input type="radio" name="lang" id="ita" />
                <label for="ita">ITA</label>
                <input type="radio" name="lang" id="diu" />
                <label for="diu">DUI</label>
                <input type="radio" name="lang" id="srb" />
                <label for="srb">SRB</label>
                <input type="radio" name="lang" id="rus" />
                <label for="rus">СРБ</label>
        </div>
        <h6>Paniekknoppen <span><img class="infoIcon" src=" {{ asset('icons/info-icon.svg') }} "></span></h6>
        <p class="helpText">(Meerdere selecteren mogelijk)</p>
        <div class="radio-container" id="panicbuttons">
                <input type="checkbox" name="panic" id="bellen" />
                <label for="bellen">Bellen</label>
                <input type="checkbox" name="panic" id="chatten" />
                <label for="chatten">Chatten</label>
                <input type="checkbox" name="panic" id="videobellen" />
                <label for="videobellen">Videobellen</label>
        </div>
        <div class="color-container">
        <h6>Kleur aan persoon geven <span><img class="infoIcon" src=" {{ asset('icons/info-icon.svg') }} "></span></h6>
        <select id="color" name="">
            <option value="#FBCE53"><span></span></option>
            <option value="#F5A340"><span></span></option>
            <option value="#001858"><span></span></option>
            <option value="#00C426"><span></span></option>
            <option value="#7419CE"><span></span></option>
            <option value="#D628B4"><span></span></option>
        </select>
        </div>
        <!-- <div class="client-button">
            <button id="submit">Persoon toevoegen</button>
            <div class="client-button-icon">
            <img src="{{asset('icons/plus_wit-icon.svg')}}" alt="Create-client button">
        </div> -->
        <button id="add" class="client-button" style=" margin-top: 2rem; ">Persoon toevoegen
            <div class="icon">
                <img src="{{asset('icons/plus_wit-icon.svg')}}" alt="Create-client button">
            </div>
          </button>
        </div>
    </div>
    <div class="form-right">
    </div>

</div>

{% endblock %}
